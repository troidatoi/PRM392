<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/light_gray_background">

    <!-- Search Bar -->
    <LinearLayout
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:gravity="center_vertical">

        <!-- Search Input -->
        <EditText
            android:id="@+id/etSearch"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/search_bar_background"
            android:hint="Tìm kiếm theo tên, loại, hãng, model..."
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textSize="14sp"
            android:textColor="#1A1A1A"
            android:textColorHint="#666666"
            android:singleLine="true"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:maxLines="1" />

        <!-- Filter Icon -->
        <ImageView
            android:id="@+id/iconFilter"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_filter"
            android:contentDescription="Filter"
            android:layout_marginStart="12dp"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

    <!-- Filter/Category Bar -->
    <HorizontalScrollView
        android:id="@+id/categoryScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchBar"
        android:background="#FFFFFF"
        android:fillViewport="true"
        android:scrollbars="none"
        android:elevation="1dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp">

            <!-- Filter Icon -->
            <LinearLayout
                android:id="@+id/btnFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/category_button_active"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_filter"
                    app:tint="#FFFFFF"
                    android:contentDescription="Filter" />
            </LinearLayout>

            <!-- Category: All -->
            <LinearLayout
                android:id="@+id/categoryAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/category_button_active"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Category: Mountain -->
            <LinearLayout
                android:id="@+id/categoryMountain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/category_button_inactive"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mountain"
                    android:textColor="#666666"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Category: Folding -->
            <LinearLayout
                android:id="@+id/categoryFolding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/category_button_inactive"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Folding"
                    android:textColor="#666666"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Category: E-gravel -->
            <LinearLayout
                android:id="@+id/categoryEGravel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/category_button_inactive"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="E-gravel"
                    android:textColor="#666666"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>

    </HorizontalScrollView>

    <!-- Results Count and View Toggle -->
    <LinearLayout
        android:id="@+id/resultsBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/categoryScrollView"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:gravity="center_vertical">

        <!-- Results Count -->
        <TextView
            android:id="@+id/tvResultsCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="5,597 Results"
            android:textSize="14sp"
            android:textColor="#8B7355" />

        <!-- View Toggle -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/view_toggle_background"
            android:padding="4dp">

            <!-- Grid Icon (Selected) -->
            <LinearLayout
                android:id="@+id/viewGrid"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/view_toggle_active"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_grid"
                    app:tint="#FFFFFF"
                    android:contentDescription="Grid view" />
            </LinearLayout>

            <!-- List Icon -->
            <LinearLayout
                android:id="@+id/viewList"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_list"
                    app:tint="#8B7355"
                    android:contentDescription="List view" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Product Grid -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvProducts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/resultsBar"
        android:layout_above="@+id/bottomNavBar"
        android:padding="12dp"
        android:nestedScrollingEnabled="false" />

    <!-- Bottom Navigation Bar -->
    <!-- Bottom Navigation Bar -->
    <include layout="@layout/bottom_navigation_bar" />


</RelativeLayout>
