<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/gradient_background">

    <!-- Header with Title -->
    <androidx.cardview.widget.CardView
        android:id="@+id/headerCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="horizontal"
            android:padding="20dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Shop Bikes"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#1A1A1A"
                android:letterSpacing="0.01" />

            <!-- Filter Icon -->
            <androidx.cardview.widget.CardView
                android:id="@+id/iconFilter"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#F5F5F5"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_filter"
                        app:tint="#2196F3"
                        android:contentDescription="Filter" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Category/Filter Bar -->
    <HorizontalScrollView
        android:id="@+id/categoryScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerCard"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:fillViewport="false"
        android:scrollbars="none"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="8dp">

            <!-- Category: All -->
            <androidx.cardview.widget.CardView
                android:id="@+id/categoryAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#2196F3"
                android:layout_marginEnd="10dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tất cả"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="10dp"
                    android:letterSpacing="0.01" />

            </androidx.cardview.widget.CardView>

            <!-- Category: Mountain -->
            <androidx.cardview.widget.CardView
                android:id="@+id/categoryMountain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#FFFFFF"
                android:layout_marginEnd="10dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mountain"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="10dp"
                    android:letterSpacing="0.01" />

            </androidx.cardview.widget.CardView>

            <!-- Category: Folding -->
            <androidx.cardview.widget.CardView
                android:id="@+id/categoryFolding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#FFFFFF"
                android:layout_marginEnd="10dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Folding"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="10dp"
                    android:letterSpacing="0.01" />

            </androidx.cardview.widget.CardView>

            <!-- Category: E-gravel -->
            <androidx.cardview.widget.CardView
                android:id="@+id/categoryEGravel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#FFFFFF"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="E-gravel"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="10dp"
                    android:letterSpacing="0.01" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </HorizontalScrollView>

    <!-- Results Count and View Toggle -->
    <LinearLayout
        android:id="@+id/resultsBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/categoryScrollView"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="16dp"
        android:gravity="center_vertical">

        <!-- Results Count -->
        <TextView
            android:id="@+id/tvResultsCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="5,597 Results"
            android:textSize="15sp"
            android:textColor="#1A1A1A"
            android:textStyle="bold"
            android:letterSpacing="0.01" />

        <!-- View Toggle -->
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">

                <!-- Grid Icon (Selected) -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/viewGrid"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#2196F3"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_grid"
                            app:tint="#FFFFFF"
                            android:contentDescription="Grid view" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <!-- List Icon -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/viewList"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_list"
                            app:tint="#9E9E9E"
                            android:contentDescription="List view" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- Product Grid -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvProducts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/resultsBar"
        android:layout_above="@+id/bottomNavBar"
        android:padding="12dp"
        android:nestedScrollingEnabled="false" />

    <!-- Bottom Navigation Bar -->
    <!-- Bottom Navigation Bar -->
    <include layout="@layout/bottom_navigation_bar" />


</RelativeLayout>
