<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/google_ai_studio_1">

    <!-- Header với Search Box -->
    <androidx.cardview.widget.CardView
        android:id="@+id/headerCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@android:color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/liquid_glass_header"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <!-- Back Button -->
            <androidx.cardview.widget.CardView
                android:id="@+id/btnBack"
                android:layout_width="45dp"
                android:layout_height="45dp"
                app:cardCornerRadius="22.5dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/liquid_glass_small"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_back"
                        app:tint="#2196F3"
                        android:contentDescription="Back" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <!-- Search Box -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                app:cardCornerRadius="25dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/transparent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/liquid_glass_search"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/iconSearch"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="12dp"
                        android:src="@drawable/ic_search"
                        app:tint="#5E7CE2"
                        android:contentDescription="Search" />

                    <EditText
                        android:id="@+id/etSearch"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toEndOf="@id/iconSearch"
                        android:layout_toStartOf="@id/btnClearSearch"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@android:color/transparent"
                        android:hint="Tìm kiếm sản phẩm..."
                        android:textColorHint="#8B9DC3"
                        android:textColor="#3D5A80"
                        android:textSize="15sp"
                        android:inputType="text"
                        android:imeOptions="actionSearch"
                        android:importantForAutofill="no" />

                    <ImageView
                        android:id="@+id/btnClearSearch"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/ic_close"
                        app:tint="#999999"
                        android:visibility="gone"
                        android:clickable="true"
                        android:focusable="true"
                        android:contentDescription="Clear search" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerCard"
        android:layout_marginTop="16dp"
        android:fillViewport="true"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Tìm Kiếm Gợi Ý Section -->
            <androidx.cardview.widget.CardView
                android:id="@+id/suggestionsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="25dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@android:color/transparent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/liquid_glass_background"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tìm Kiếm Gợi Ý"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginBottom="16dp" />

                    <!-- Suggestion Item 1 -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/suggestion1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@android:color/transparent"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/liquid_glass_input"
                            android:padding="16dp">

                            <ImageView
                                android:id="@+id/iconSuggestion1"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_search"
                                app:tint="#5E7CE2"
                                android:contentDescription="Search suggestion" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/iconSuggestion1"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="12dp"
                                android:text="Xe đạp điện"
                                android:textSize="15sp"
                                android:textColor="#3D5A80" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Suggestion Item 2 -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/suggestion2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@android:color/transparent"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/liquid_glass_input"
                            android:padding="16dp">

                            <ImageView
                                android:id="@+id/iconSuggestion2"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_search"
                                app:tint="#5E7CE2"
                                android:contentDescription="Search suggestion" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/iconSuggestion2"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="12dp"
                                android:text="Xe thể thao"
                                android:textSize="15sp"
                                android:textColor="#3D5A80" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Suggestion Item 3 -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/suggestion3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@android:color/transparent"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/liquid_glass_input"
                            android:padding="16dp">

                            <ImageView
                                android:id="@+id/iconSuggestion3"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_search"
                                app:tint="#5E7CE2"
                                android:contentDescription="Search suggestion" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/iconSuggestion3"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="12dp"
                                android:text="Xe đạp địa hình"
                                android:textSize="15sp"
                                android:textColor="#3D5A80" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Suggestion Item 4 -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/suggestion4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@android:color/transparent"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/liquid_glass_input"
                            android:padding="16dp">

                            <ImageView
                                android:id="@+id/iconSuggestion4"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_search"
                                app:tint="#5E7CE2"
                                android:contentDescription="Search suggestion" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/iconSuggestion4"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="12dp"
                                android:text="Xe đạp trẻ em"
                                android:textSize="15sp"
                                android:textColor="#3D5A80" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Suggestion Item 5 -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/suggestion5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@android:color/transparent"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/liquid_glass_input"
                            android:padding="16dp">

                            <ImageView
                                android:id="@+id/iconSuggestion5"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_search"
                                app:tint="#5E7CE2"
                                android:contentDescription="Search suggestion" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/iconSuggestion5"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="12dp"
                                android:text="Xe đạp gấp"
                                android:textSize="15sp"
                                android:textColor="#3D5A80" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Search Results (Initially Hidden) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/resultsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                app:cardCornerRadius="25dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@android:color/transparent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/liquid_glass_background"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kết Quả Tìm Kiếm"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginBottom="16dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvSearchResults"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false" />

                    <TextView
                        android:id="@+id/tvNoResults"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Không tìm thấy kết quả"
                        android:textSize="15sp"
                        android:textColor="#666666"
                        android:visibility="gone"
                        android:padding="24dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>

