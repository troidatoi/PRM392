<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/gradient_background">
    
    <!-- Header Section -->
    <androidx.cardview.widget.CardView
        android:id="@+id/headerSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="28dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="#FFFFFF">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:paddingTop="16dp">
        
        <!-- Avatar - Left -->

        <!-- Greeting - Center -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_centerInParent="true">
            
            <TextView
                android:id="@+id/tvGreeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello, User"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#1A1A1A"
                android:gravity="center" />
                
            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today"
                android:textSize="13sp"
                android:textColor="#666666"
                android:layout_marginTop="2dp"
                android:gravity="center" />
        </LinearLayout>
        
        <!-- Search Icon - Right -->

    </RelativeLayout>
    
    </androidx.cardview.widget.CardView>
    

    <!-- Main Content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/headerSection"
        android:layout_above="@+id/bottomNavBar"
        android:fillViewport="true"
        android:paddingBottom="16dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:paddingTop="8dp">
            
            <!-- Banner inside ScrollView -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="12dp"
                app:cardBackgroundColor="@android:color/transparent">
                
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/banner_home"
                    android:scaleType="centerCrop"
                    android:contentDescription="Banner" />
                    
            </androidx.cardview.widget.CardView>

            <!-- Welcome Section -->
            <TextView
                android:id="@+id/tvWelcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="ChÃ o má»«ng"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="#1A1A1A" />

            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TÃ¬m kiáº¿m xe Ä‘áº¡p Ä‘iá»‡n cá»§a báº¡n"
                android:textSize="17sp"
                android:textColor="#666666"
                android:layout_marginTop="4dp" />

            <!-- Search Bar -->
            <androidx.cardview.widget.CardView
                android:id="@+id/searchCard"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="28dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#F5F5F5">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">

                    <ImageView
                        android:id="@+id/iconSearch"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_search"
                        app:tint="#999999" />

                    <EditText
                        android:id="@+id/etSearch"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toEndOf="@id/iconSearch"
                        android:layout_marginStart="12dp"
                        android:background="@android:color/transparent"
                        android:hint="@string/search_hint"
                        android:textColorHint="#999999"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:inputType="text"
                        android:imeOptions="actionSearch"
                        android:autofillHints="search" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <!-- Featured Section Title -->
            <TextView
                android:id="@+id/tvFeatured"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sáº£n pháº©m ná»•i báº­t"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#1A1A1A"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp" />

            <!-- Product RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvProducts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />

            <!-- Stores Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp">
                
                <TextView
                    android:id="@+id/tvStoresTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cá»­a hÃ ng gáº§n báº¡n"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A1A" />
                
                <TextView
                    android:id="@+id/tvStoresSubtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Äang táº£i..."
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginTop="4dp"
                    android:visibility="gone" />
                
                <!-- Location Input Button - Below subtitle -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/btnLocationInput"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginTop="16dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="8dp"
                    android:clickable="true"
                    android:focusable="true">
                    
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:background="@drawable/gradient_button"
                        android:gravity="center"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp">
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“ TÃ¬m cá»­a hÃ ng gáº§n báº¡n"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                            
                    </LinearLayout>
                    
                </androidx.cardview.widget.CardView>
                    
            </LinearLayout>

            <!-- Map Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="28dp"
                app:cardElevation="10dp"
                app:cardBackgroundColor="#FFFFFF">

                <org.osmdroid.views.MapView
                    android:id="@+id/mapView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:focusable="true" />

            </androidx.cardview.widget.CardView>

            <!-- View Map Button -->
            <androidx.cardview.widget.CardView
                android:id="@+id/btnViewMap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="25dp"
                app:cardElevation="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="16dp"
                    android:background="@drawable/gradient_button">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_location"
                        android:tint="@android:color/white"
                        android:contentDescription="Map Icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Xem Báº£n Äá»“"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginStart="12dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Stores List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvStores"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />

        </LinearLayout>

    </ScrollView>

    <!-- Floating Chat Button -->
    <androidx.cardview.widget.CardView
        android:id="@+id/btnFloatingChat"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/bottomNavBar"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="32dp"
        app:cardElevation="12dp"
        android:clickable="true"
        android:focusable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_button"
            android:gravity="center">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_chat_bubble"
                app:tint="#FFFFFF"
                android:contentDescription="Chat" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <!-- Bottom Navigation Bar -->
    <!-- Bottom Navigation Bar -->
    <include layout="@layout/bottom_navigation_bar" />

</RelativeLayout>
