<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="0dp"
    android:layout_height="140dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/modern_card_with_shadow"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/statIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_modern_dashboard"
            android:background="@drawable/modern_button_background"
            android:padding="8dp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/statValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/text_dark"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/statLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Label"
            android:textSize="14sp"
            android:textColor="@color/text_secondary" />

    </LinearLayout>

</androidx.cardview.widget.CardView>


