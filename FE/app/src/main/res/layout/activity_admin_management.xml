                            app:cardElevation="8dp"
                            app:cardBackgroundColor="#FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/gradient_card_green"
                        android:padding="16dp"
                        android:paddingBottom="24dp"
                        android:gravity="center">

                        <androidx.cardview.widget.CardView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            app:cardCornerRadius="24dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#FFFFFF"
                            android:layout_marginBottom="10dp">

                            <ImageView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_modern_products"
                                android:tint="#4CAF50" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/tvTotalProducts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:layout_marginBottom="3dp" />

                        <TextView
                            android:id="@+id/tvTotalProductsLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tổng số xe"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:alpha="0.95"
                            android:layout_marginTop="2dp"
                            android:visibility="visible" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

                <!-- Sales Performance Chart -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="24dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Chart Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="20dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tổng đơn hàng theo tuần"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#1E293B" />

                        <TextView
                            android:id="@+id/tvChartSubtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="7 ngày gần nhất"
                            android:textSize="13sp"
                            android:textColor="#94A3B8"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Sales Performance Chart with Mock Data -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:background="#FAFBFC"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Chart Container -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="bottom"
                        android:baselineAligned="false">

                        <!-- Y-axis Labels -->
                        <LinearLayout
                            android:id="@+id/yAxisLabels"
                            android:layout_width="45dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_horizontal">

                            <TextView
                                android:id="@+id/tvYAxisMax"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:text="100"
                                android:textSize="11sp"
                                android:textColor="#64748B"
                                android:textStyle="bold"
                                android:gravity="center" />

                            <TextView
                                android:id="@+id/tvYAxisMid2"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:text="75"
                                android:textSize="11sp"
                                android:textColor="#64748B"
                                android:textStyle="bold"
                                android:gravity="center" />

                            <TextView
                                android:id="@+id/tvYAxisMid1"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:text="50"
                                android:textSize="11sp"
                                android:textColor="#64748B"
                                android:textStyle="bold"
                                android:gravity="center" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:text="0"
                                android:textSize="11sp"
                                android:textColor="#64748B"
                                android:textStyle="bold"
                                android:gravity="center" />

                        </LinearLayout>

                        <!-- Chart Area with Gradient Bars -->
                        <LinearLayout
                            android:id="@+id/chartBarsContainer"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="bottom"
                            android:layout_marginStart="8dp"
                            android:background="#FFFFFF"
                            android:padding="8dp">

                            <!-- CN Bar -->
                            <LinearLayout
                                android:id="@+id/barCN"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="bottom"
                                android:layout_marginHorizontal="3dp">

                                <View
                                    android:id="@+id/barViewCN"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:background="@drawable/gradient_bar_chart" />

                            </LinearLayout>

                            <!-- T2 Bar -->
                            <LinearLayout
                                android:id="@+id/barT2"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="bottom"
                                android:layout_marginHorizontal="3dp">

                                <View
                                    android:id="@+id/barViewT2"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:background="@drawable/gradient_bar_chart" />

                            </LinearLayout>

                            <!-- T3 Bar -->
                            <LinearLayout
                                android:id="@+id/barT3"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="bottom"
                                android:layout_marginHorizontal="3dp">

                                <View
                                    android:id="@+id/barViewT3"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:background="@drawable/gradient_bar_chart" />

                            </LinearLayout>

                            <!-- T4 Bar -->
                            <LinearLayout
                                android:id="@+id/barT4"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="bottom"
                                android:layout_marginHorizontal="3dp">

                                <View
                                    android:id="@+id/barViewT4"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:background="@drawable/gradient_bar_chart" />

                            </LinearLayout>

                            <!-- T5 Bar -->
                            <LinearLayout
                                android:id="@+id/barT5"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="bottom"
                                android:layout_marginHorizontal="3dp">

                                <View
                                    android:id="@+id/barViewT5"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:background="@drawable/gradient_bar_chart" />

                            </LinearLayout>

                            <!-- T6 Bar -->
                            <LinearLayout
                                android:id="@+id/barT6"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="bottom"
                                android:layout_marginHorizontal="3dp">

                                <View
                                    android:id="@+id/barViewT6"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:background="@drawable/gradient_bar_chart" />

                            </LinearLayout>

                            <!-- T7 Bar -->
                            <LinearLayout
                                android:id="@+id/barT7"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="bottom"
                                android:layout_marginHorizontal="3dp">

                                <View
                                    android:id="@+id/barViewT7"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:background="@drawable/gradient_bar_chart" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <!-- X-axis Labels -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginStart="48dp"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:id="@+id/tvXAxisCN"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="CN"
                            android:textSize="10sp"
                            android:textColor="#6B7280"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/tvXAxisT2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="T2"
                            android:textSize="10sp"
                            android:textColor="#6B7280"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/tvXAxisT3"
