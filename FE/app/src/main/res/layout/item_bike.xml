<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewBike"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Bike Image -->
        <ImageView
            android:id="@+id/ivBikeImage"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@drawable/liquid_glass_small"
            android:contentDescription="Bike Image"
            android:scaleType="centerCrop"
            android:src="@drawable/splash_bike_background" />

        <!-- Bike Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <!-- Bike Name -->
            <TextView
                android:id="@+id/tvBikeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Xe đạp điện VinFast Klara S"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Brand and Model -->
            <TextView
                android:id="@+id/tvBikeBrand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="VinFast"
                android:textColor="@color/gray"
                android:textSize="14sp" />

            <!-- Price -->
            <TextView
                android:id="@+id/tvBikePrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="29.990.000 ₫"
                android:textColor="@color/primary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Stock and Status Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end">

                <ImageView
                    android:id="@+id/ivAddToCart"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/liquid_glass_small"
                    android:clickable="true"
                    android:contentDescription="Add To Cart"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:padding="6dp"
                    android:src="@drawable/ic_add_cart"
                    android:tint="@color/primary" />

                <ImageView
                    android:id="@+id/ivDetailIcon"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/liquid_glass_small"
                    android:clickable="true"
                    android:contentDescription="View Details"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:padding="6dp"
                    android:src="@drawable/ic_visibility"
                    android:tint="@color/primary" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>
