            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thá»­ thay Ä‘á»•i bá»™ lá»c hoáº·c khoáº£ng thá»i gian"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
