                    android:tint="@color/primary_blue" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tá»· Lá»‡ Tá»“n Kho / BÃ¡n HÃ ng"
