<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#F8F9FA">

    <!-- Header with Gradient -->
    <androidx.cardview.widget.CardView
        android:id="@+id/headerCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_primary"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="24dp"
            android:paddingBottom="24dp"
            android:gravity="center_vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/btnBack"
                android:layout_width="42dp"
                android:layout_height="42dp"
                app:cardCornerRadius="21dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#FFFFFF"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_back"
                        app:tint="#2196F3"
                        android:contentDescription="Back" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Lịch Sử Đơn Hàng"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:layout_marginEnd="42dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Filters + Orders List -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerCard"
        android:orientation="vertical"
        android:background="#F8F9FA">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="20dp">

            <!-- Status Filters -->
            <HorizontalScrollView
                android:id="@+id/filterScroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="false"
                android:scrollbars="none"
                android:paddingBottom="16dp">

                <LinearLayout
                    android:id="@+id/statusFilters"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/filterAll"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:gravity="center"
                        android:text="Tất cả"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:background="@drawable/tag_chip_background"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/filterPending"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:gravity="center"
                        android:text="pending"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:background="@drawable/tag_chip_background"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/filterConfirmed"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:gravity="center"
                        android:text="confirmed"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:background="@drawable/tag_chip_background"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/filterShipped"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:gravity="center"
                        android:text="shipped"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:background="@drawable/tag_chip_background"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/filterDelivered"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:gravity="center"
                        android:text="delivered"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:background="@drawable/tag_chip_background"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/filterCancelled"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:gravity="center"
                        android:text="cancelled"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:background="@drawable/tag_chip_background" />

                </LinearLayout>

            </HorizontalScrollView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvOrders"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/filterScroll"
                android:clipToPadding="false"
                android:paddingTop="4dp"
                android:paddingBottom="16dp" />

            <!-- Empty State -->
            <LinearLayout
                android:id="@+id/emptyState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_cart"
                    app:tint="#CCCCCC"
                    android:alpha="0.5"
                    android:contentDescription="Empty" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chưa có đơn hàng nào"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#999999"
                    android:layout_marginTop="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hãy đặt hàng ngay để trải nghiệm dịch vụ của chúng tôi"
                    android:textSize="14sp"
                    android:textColor="#CCCCCC"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:paddingStart="32dp"
                    android:paddingEnd="32dp" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>

