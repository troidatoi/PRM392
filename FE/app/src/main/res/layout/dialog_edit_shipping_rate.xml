<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thêm/Sửa Bảng Giá Ship"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Min Distance (Read-only) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Khoảng cách tối thiểu (km)"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvMinDistance"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="0"
            android:gravity="center_vertical"
            android:background="@drawable/input_glass_background"
            android:padding="12dp"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <!-- Max Distance (Read-only) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Khoảng cách tối đa (km)"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvMaxDistance"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="3"
            android:gravity="center_vertical"
            android:background="@drawable/input_glass_background"
            android:padding="12dp"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <!-- Price Per Km -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đơn giá mỗi km (₫) *"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etPricePerKm"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="5000"
            android:inputType="number"
            android:background="@drawable/input_glass_background"
            android:padding="12dp"
            android:textSize="14sp"
            android:layout_marginBottom="16dp" />

        <!-- Note -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ghi chú"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Giao gần nội quận"
            android:inputType="text"
            android:background="@drawable/input_glass_background"
            android:padding="12dp"
            android:textSize="14sp"
            android:minLines="2"
            android:maxLines="3"
            android:layout_marginBottom="16dp" />


        <!-- Is Active -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Đang hoạt động"
                android:textSize="14sp"
                android:textColor="#666666" />

            <android.widget.Switch
                android:id="@+id/switchIsActive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>

