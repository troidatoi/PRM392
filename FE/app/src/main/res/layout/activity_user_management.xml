<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#F1F5F9">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomNavBar"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header with Gradient -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/gradient_header_blue"
                android:padding="24dp"
                android:paddingTop="48dp"
                android:paddingBottom="28dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Manage"
                            android:textColor="#B3E5FC"
                            android:textSize="14sp"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tvTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Users"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF" />

                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/btnAddNewUser"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        app:cardCornerRadius="22dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="#FFFFFF">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_add"
                            android:tint="#2196F3" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <!-- User Count Badge -->
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#1976D2">

                    <TextView
                        android:id="@+id/tvUserCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total: 0 users"
                        android:textSize="13sp"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:paddingTop="16dp"
                android:layout_marginTop="-16dp">

                <!-- Search & Filter Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="#FFFFFF"
                    android:layout_marginBottom="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- Search Bar -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@drawable/search_bar_background"
                            android:padding="12dp"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_search"
                                android:tint="#64748B" />

                            <EditText
                                android:id="@+id/etSearch"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="12dp"
                                android:background="@android:color/transparent"
                                android:hint="Search users..."
                                android:textSize="14sp"
                                android:textColor="#1E293B"
                                android:textColorHint="#94A3B8"
                                android:inputType="text"
                                android:imeOptions="actionSearch" />

                            <androidx.cardview.widget.CardView
                                android:id="@+id/btnFilter"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                app:cardCornerRadius="18dp"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="#F1F5F9">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_filter"
                                    android:tint="#64748B" />

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                        <!-- Filter Chips -->
                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:scrollbars="none">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/chipAll"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:cardCornerRadius="16dp"
                                    app:cardElevation="0dp"
                                    app:cardBackgroundColor="#2196F3"
                                    android:layout_marginEnd="8dp">

                                    <TextView
                                        android:id="@+id/tabAll"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="All Users"
                                        android:textStyle="bold"
                                        android:textSize="13sp"
                                        android:textColor="#FFFFFF"
                                        android:paddingStart="20dp"
                                        android:paddingEnd="20dp"
                                        android:paddingTop="10dp"
                                        android:paddingBottom="10dp" />

                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/chipCustomers"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:cardCornerRadius="16dp"
                                    app:cardElevation="0dp"
                                    app:cardBackgroundColor="#F1F5F9"
                                    android:layout_marginEnd="8dp">

                                    <TextView
                                        android:id="@+id/tabCustomers"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Customers"
                                        android:textSize="13sp"
                                        android:textStyle="bold"
                                        android:textColor="#64748B"
                                        android:paddingStart="20dp"
                                        android:paddingEnd="20dp"
                                        android:paddingTop="10dp"
                                        android:paddingBottom="10dp" />

                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/chipAdmins"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:cardCornerRadius="16dp"
                                    app:cardElevation="0dp"
                                    app:cardBackgroundColor="#F1F5F9"
                                    android:layout_marginEnd="8dp">

                                    <TextView
                                        android:id="@+id/tabAdmins"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Admins"
                                        android:textSize="13sp"
                                        android:textStyle="bold"
                                        android:textColor="#64748B"
                                        android:paddingStart="20dp"
                                        android:paddingEnd="20dp"
                                        android:paddingTop="10dp"
                                        android:paddingBottom="10dp" />

                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/chipActive"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:cardCornerRadius="16dp"
                                    app:cardElevation="0dp"
                                    app:cardBackgroundColor="#F1F5F9"
                                    android:layout_marginEnd="8dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Active"
                                        android:textSize="13sp"
                                        android:textStyle="bold"
                                        android:textColor="#64748B"
                                        android:paddingStart="20dp"
                                        android:paddingEnd="20dp"
                                        android:paddingTop="10dp"
                                        android:paddingBottom="10dp" />

                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/chipInactive"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:cardCornerRadius="16dp"
                                    app:cardElevation="0dp"
                                    app:cardBackgroundColor="#F1F5F9">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Inactive"
                                        android:textSize="13sp"
                                        android:textStyle="bold"
                                        android:textColor="#64748B"
                                        android:paddingStart="20dp"
                                        android:paddingEnd="20dp"
                                        android:paddingTop="10dp"
                                        android:paddingBottom="10dp" />

                                </androidx.cardview.widget.CardView>

                            </LinearLayout>

                        </HorizontalScrollView>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Users List -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewUsers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:clipToPadding="false" />

                <!-- Empty / Loading -->
                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="48dp">

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:indeterminateTint="#2196F3"
                    android:visibility="gone" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/emptyStateCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#F8FAFC"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="32dp">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:src="@drawable/ic_modern_users"
                            android:tint="#CBD5E1"
                            android:layout_marginBottom="16dp" />

                        <TextView
                            android:id="@+id/tvEmptyState"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No users found"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#64748B"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Try adjusting your filters"
                            android:textSize="13sp"
                            android:textColor="#94A3B8"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Nav -->
    <include
        android:id="@+id/bottomNavBar"
        layout="@layout/view_admin_bottom_nav"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
