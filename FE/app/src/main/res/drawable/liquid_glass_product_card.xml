<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer glow -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <gradient
                android:angle="135"
                android:startColor="#40FFFFFF"
                android:endColor="#10FFFFFF"
                android:type="linear" />
        </shape>
    </item>

    <!-- Main glass layer -->
    <item
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="18dp" />
            <gradient
                android:angle="135"
                android:startColor="#40FFFFFF"
                android:centerColor="#25FFFFFF"
                android:endColor="#15FFFFFF"
                android:type="linear" />
            <stroke
                android:width="1dp"
                android:color="#50FFFFFF" />
        </shape>
    </item>
</layer-list>

