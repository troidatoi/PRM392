<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer glow/shadow -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="30dp" />
            <gradient
                android:angle="135"
                android:startColor="#40FFFFFF"
                android:endColor="#10FFFFFF"
                android:type="linear" />
        </shape>
    </item>

    <!-- Main glass layer -->
    <item
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="28dp" />
            <gradient
                android:angle="135"
                android:startColor="#50FFFFFF"
                android:centerColor="#30FFFFFF"
                android:endColor="#20FFFFFF"
                android:type="linear" />
            <stroke
                android:width="1.5dp"
                android:color="#60FFFFFF" />
        </shape>
    </item>

    <!-- Inner highlight -->
    <item
        android:left="6dp"
        android:top="6dp"
        android:right="6dp"
        android:bottom="6dp">
        <shape android:shape="rectangle">
            <corners android:radius="24dp" />
            <gradient
                android:angle="135"
                android:startColor="#40FFFFFF"
                android:centerColor="#00FFFFFF"
                android:type="linear" />
        </shape>
    </item>
</layer-list>

