<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow layer -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#40000000" />
            <size
                android:width="18dp"
                android:height="18dp" />
        </shape>
    </item>

    <!-- Main badge with gradient -->
    <item
        android:top="1dp"
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp">
        <shape android:shape="oval">
            <gradient
                android:angle="135"
                android:startColor="#FF5252"
                android:endColor="#F44336"
                android:type="linear" />
            <size
                android:width="18dp"
                android:height="18dp" />
            <stroke
                android:width="1.5dp"
                android:color="#FFFFFF" />
        </shape>
    </item>

</layer-list>

