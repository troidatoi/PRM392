<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer glow/shadow -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <gradient
                android:angle="135"
                android:startColor="#604A90E2"
                android:endColor="#304A90E2"
                android:type="linear" />
        </shape>
    </item>

    <!-- Main glass layer -->
    <item
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <gradient
                android:angle="135"
                android:startColor="#904A90E2"
                android:centerColor="#704A90E2"
                android:endColor="#504A90E2"
                android:type="linear" />
            <stroke
                android:width="1.5dp"
                android:color="#80FFFFFF" />
        </shape>
    </item>

    <!-- Inner highlight -->
    <item
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <gradient
                android:angle="135"
                android:startColor="#40FFFFFF"
                android:centerColor="#00FFFFFF"
                android:type="linear" />
        </shape>
    </item>
</layer-list>

