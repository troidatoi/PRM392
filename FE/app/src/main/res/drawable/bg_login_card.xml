<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        android:bottom="4dp">
        <shape>
            <solid android:color="@color/shadow_light" />
            <corners android:radius="24dp" />
        </shape>
    </item>

    <!-- Main Card Layer -->
    <item
        android:left="1dp"
        android:right="1dp"
        android:top="1dp"
        android:bottom="2dp">
        <shape>
            <solid android:color="@color/white" />
            <corners android:radius="24dp" />
            <stroke
                android:width="1dp"
                android:color="@color/border_light" />
        </shape>
    </item>
</layer-list>

