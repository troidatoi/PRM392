<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow -->
    <item
        android:top="4dp"
        android:bottom="-2dp"
        android:left="2dp"
        android:right="-2dp">
        <shape android:shape="rectangle">
            <solid android:color="#30000000" />
            <corners android:radius="28dp" />
        </shape>
    </item>

    <!-- Background blur layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#AAFFFFFF" />
            <corners android:radius="28dp" />
            <stroke
                android:width="2dp"
                android:color="#FFFFFFFF" />
        </shape>
    </item>

    <!-- Top highlight -->
    <item android:top="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#88FFFFFF"
                android:centerColor="#55FFFFFF"
                android:endColor="#22FFFFFF"
                android:angle="270" />
            <corners android:radius="28dp" />
        </shape>
    </item>

    <!-- Shine effect -->
    <item android:left="0dp" android:top="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#66FFFFFF"
                android:centerColor="#33FFFFFF"
                android:endColor="#00FFFFFF"
                android:angle="45" />
            <corners android:radius="28dp" />
        </shape>
    </item>

</layer-list>

