<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Glass background - Very transparent for buttons -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#0AFFFFFF" />
            <corners android:radius="22dp" />
        </shape>
    </item>

    <!-- Top highlight -->
    <item android:top="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#45FFFFFF"
                android:centerColor="#12FFFFFF"
                android:endColor="#00FFFFFF"
                android:angle="270" />
            <corners android:topLeftRadius="22dp" android:topRightRadius="22dp" />
        </shape>
    </item>

    <!-- Subtle border -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="0.8dp"
                android:color="#60FFFFFF" />
            <corners android:radius="22dp" />
        </shape>
    </item>
</layer-list>

