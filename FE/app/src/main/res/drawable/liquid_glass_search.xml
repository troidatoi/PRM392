<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow layer for depth -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#1A000000"
                android:centerColor="#0D000000"
                android:endColor="#00000000"
                android:angle="90" />
            <corners android:radius="30dp" />
        </shape>
    </item>

    <!-- Main liquid glass background with semi-transparent white -->
    <item
        android:top="1dp"
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#4DFFFFFF"
                android:centerColor="#40FFFFFF"
                android:endColor="#33FFFFFF"
                android:angle="135" />
            <corners android:radius="29dp" />
        </shape>
    </item>

    <!-- Top highlight for glass effect -->
    <item
        android:top="2dp"
        android:left="2dp"
        android:right="2dp"
        android:bottom="40dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#66FFFFFF"
                android:endColor="#00FFFFFF"
                android:angle="90" />
            <corners
                android:topLeftRadius="28dp"
                android:topRightRadius="28dp" />
        </shape>
    </item>

    <!-- Glass border with shimmer effect -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#80FFFFFF" />
            <corners android:radius="30dp" />
        </shape>
    </item>

    <!-- Inner glow -->
    <item
        android:top="1dp"
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="0.5dp"
                android:color="#99FFFFFF" />
            <corners android:radius="29dp" />
        </shape>
    </item>
</layer-list>
