<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Soft background -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#1A2196F3" />
        </shape>
    </item>

    <!-- Glass effect -->
    <item
        android:top="2dp"
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp">
        <shape android:shape="oval">
            <gradient
                android:startColor="#4D2196F3"
                android:centerColor="#662196F3"
                android:endColor="#802196F3"
                android:angle="135" />
        </shape>
    </item>

    <!-- Top shine -->
    <item
        android:top="2dp"
        android:left="2dp"
        android:right="2dp"
        android:bottom="30dp">
        <shape android:shape="oval">
            <gradient
                android:startColor="#80FFFFFF"
                android:endColor="#00FFFFFF"
                android:angle="90" />
        </shape>
    </item>
</layer-list>
